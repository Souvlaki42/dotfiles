[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Update explicitly installed package lists
When = PostTransaction
Exec = /usr/bin/bash -c "mkdir -p \"/home/$SUDO_USER/dotfiles/packages\"; pacman -Qqen | grep -v -- '-debug$' | sort > \"/home/$SUDO_USER/dotfiles/packages/pkg-list-pacman.txt\"; pacman -Qqem | grep -v -- '-debug$' | sort > \"/home/$SUDO_USER/dotfiles/packages/pkg-list-aur.txt\""
